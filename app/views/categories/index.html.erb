<% if @categories.empty?  %>
  <p>There are no categories available.</p>
<% else%>
<div class="columns">
  <div class="column is-6"><%= pagy_bulma_nav(@pagy).html_safe %></div>
</div>
  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Product in Category</th>
      </tr>
    </thead>
    <% @categories.each do |category|%>
      <tr>
      <td><%= link_to category.name.capitalize , category_path(category)%></td>
      <td><%= category.products.count %> </td>
      </tr>
    <% end %>
  </table>
<div class="columns">
  <div class="column is-6"><%= pagy_bulma_nav(@pagy).html_safe %></div>
</div>
<% end%>