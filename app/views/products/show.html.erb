<% if @product.nil?  %>
  <p>There are no categories available.</p>
<% else%>
 <h1><%= @product.name %></h1>
 <p>Brands: <%= @product.brand.name.capitalize %></p>
 <p>Description: <%= @product.description %></p>
 <p>Price: $<%= @product.price %></p>
 <p>Category: <%= link_to @product.category.name.capitalize , category_path(@product.category)%></p>
 <p>Country: <%= @product.country %></p>
 <p>Tags:
    <% @product.tags.each do |tag| %>
      <%= link_to tag.name.capitalize , tag_path(tag)%>
    <% end%>
 </p>
 <p><img src=<%= @product.image_link %> alt="Image not found" width="200" height="100" onerror="this.onerror=null;this.src='http://www.purpicks.com/wp-content/uploads/2018/03/lotus-cosmetics-usa-eye-shadow-palette-smokey.png';" /></p>

<% end%>