
<%= form_with(url: search_path,local: true, method: "get") do %>

  <%= text_field_tag(:search_term) %>
  <% category_array = Category.all { |category| [category.name, category.id] } %>

  <%= select_tag(:category_id, options_from_collection_for_select(category_array,'id', 'name', '1')) %>
  <%= submit_tag("Search") %>
<% end %>